@model IEnumerable<OnlineRailwayReservationSystem.Models.Complain>

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

@{
    ViewBag.Title = "Manage Complains";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">@ViewBag.Title</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- ============================================================== -->
        <!-- table -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>TYPE</th>
                                    <th>DESCRIPTION</th>
                                    <th>USER CNIC</th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComplainType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComplainDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminUser.UserCNIC)
                                        </td>
                                        <td>
                                            <span class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.ComplainID })</span>
                                            <span class="btn btn-danger">@Html.ActionLink("Dismiss", "Delete", new { id = item.ComplainID })</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <footer class="footer text-center"> 2018 &copy; E-Ticket </footer>
</div>
