@model IEnumerable<OnlineRailwayReservationSystem.Models.Ticket>

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

@{
    ViewBag.Title = "Manage Ticket";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">@ViewBag.Title</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- ============================================================== -->
        <!-- table -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <span class="btn btn-default">@Html.ActionLink("Add Ticket", "Create")</span>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>SRC STATION</th>
                                    <th>DST STATION</th>
                                    <th>FARE</th>
                                    <th>ALLOCATED SEAT</th>
                                    <th>ALLOCATED BERTH</th>
                                    <th>USER CNIC</th>
                                    <th>PASSENGER CNIC</th>
                                    <th>TRAIN NAME</th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SrcStation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DstStation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fare)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AllocatedSeat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AllocatedBirth)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminUser.UserCNIC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Passenger.PassengerCNIC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Train.TrainName)
                                        </td>
                                        <td>
                                            <span class="btn btn-default">@Html.ActionLink("Update", "Edit", new { id = item.TicketID })</span>
                                            <span class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.TicketID })</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <footer class="footer text-center"> 2018 &copy; E-Ticket </footer>
</div>
