@model IEnumerable<OnlineRailwayReservationSystem.Models.AdminUser>

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

@{
    ViewBag.Title = "Manage Users";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">@ViewBag.Title</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- ============================================================== -->
        <!-- table -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <span class="btn btn-default">@Html.ActionLink("Add New User", "Create")</span>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>CNIC</th>
                                    <th>NAME</th>
                                    <th>EMAIL</th>
                                    <th>PHONE NO,</th>
                                    <th>ROLE</th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.UserCNIC)</td>
                                    <td class="txt-oflo">@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td class="txt-oflo">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td><span class="text-success">@Html.DisplayFor(modelItem => item.Role)</span></td>
                                    <td>
                                        <span class="btn btn-default">@Html.ActionLink("Update", "Edit", new { id = item.UserID })</span>
                                        <span class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.UserID })</span>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <footer class="footer text-center"> 2018 &copy; E-Ticket </footer>
</div>
